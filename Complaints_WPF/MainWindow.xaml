<Window x:Class="Complaints_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Complaints_WPF"
        mc:Ignorable="d"
        xmlns:uc="clr-namespace:Complaints_WPF.Views"
        xmlns:vm="clr-namespace:Complaints_WPF.ViewModels"
        WindowStartupLocation="CenterScreen"
        Height="800" Width="1320"
        >
    <Window.DataContext>
        <vm:ComplaintsViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label x:Name="lblPros" Grid.Row="0"/>
        <Grid Grid.Row="1">
            <uc:ComplaintsView />
        </Grid>
    </Grid>
</Window>
